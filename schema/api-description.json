{
   "openrpc":"1.0.0-rc1",
   "info":{
      "version":"1.0.0",
      "title":"NMS Agent API",
      "description":"API that describes the different operations supported by the NMS Agent.",
      "termsOfService":"",
      "contact":{
         "name":"",
         "email":"",
         "url":""
      },
      "license":{
         "name":"Apache 2.0",
         "url":"https://www.apache.org/licenses/LICENSE-2.0.html"
      }
   },
   "servers":[
      {
         "url":"http://localhost:9000"
      }
   ],
   "methods":[
      {
         "name":"Face.Get",
         "description":"Get face info for a specific face.",
         "params":[
            {
               "name":"Id",
               "description":"Id of the face to get.",
               "required":true,
               "schema":{
                  "type":"integer"
               }
            }
         ],
         "result":{
            "name":"faceInfo",
            "description":"the face that was created",
            "schema":{
               "$ref":"#/components/schemas/FaceInfo"
            }
         }
      },
      {
         "name":"Face.Create",
         "description":"Creates a new face on the forwarder.",
         "params":[
            {
               "$ref":"#/components/schemas/Locator"
            }
         ],
         "result":{
            "name":"newFace",
            "description":"the face that was created",
            "schema":{
               "$ref":"#/components/schemas/Face"
            }
         }
      },
      {
         "name":"Face.Destroy",
         "description":"Removes a face from the forwarder.",
         "params":[
            {
               "name":"Id",
               "description":"Id of the face to remove",
               "required":true,
               "schema":{
                  "type":"integer"
               }
            }
         ],
         "result":{
            "name":"face",
            "description":"face deleted",
            "schema":{

            }
         }
      },
      {
         "name":"Face.List",
         "description":"Retrieves the list of faces on the forwarder.",
         "params":[

         ],
         "result":{
            "name":"faces",
            "description":"the list of faces",
            "schema":{
               "type":"array",
               "items":{
                  "$ref":"#/components/schemas/Face"
               }
            }
         }
      },
      {
         "name":"Fib.List",
         "description":"Retrieves the fib from the forwarder.",
         "params":[

         ],
         "result":{
            "name":"fib",
            "description":"the fib",
            "schema":{
               "type":"array",
               "items":{
                  "type":"string"
               }
            }
         }
      },
      {
         "name":"EthFace.ListPorts",
         "description":"Retrieves the fib from the forwarder.",
         "params":[

         ],
         "result":{
            "name":"ports",
            "description":"the list of ports",
            "schema":{
               "type":"array",
               "items":{
                  "$ref":"#/components/schemas/PortInfo"
               }
            }
         }
      },
      {
         "name":"Route.Add",
         "description":"Adds a route to the RIB. The FIB will be update automatically.",
         "params":[
            {
               "$ref":"#/components/schemas/Route"
            }
         ],
         "result":{
            "name":"newRoute",
            "description":"new route added",
            "schema":{

            }
         }
      },
      {
         "name":"Route.Remove",
         "description":"Removes a route from the RIB. The FIB will be update automatically.",
         "params":[
            {
               "$ref":"#/components/schemas/RouteKey"
            }
         ],
         "result":{
            "name":"route",
            "description":"route deleted",
            "schema":{

            }
         }
      }
   ],
   "components":{
      "schemas":{
         "Locator":{
            "type":"object",
            "required":[
               "Port",
               "Remote",
               "Scheme"
            ],
            "properties":{
               "Local":{
                  "type":"string"
               },
               "Port":{
                  "type":"string"
               },
               "Remote":{
                  "type":"string"
               },
               "Scheme":{
                  "type":"string"
               }
            }
         },
         "Face":{
            "type":"object",
            "properties":{
               "Id":{
                  "type":"integer"
               },
               "Locator":{
                  "$ref":"#/components/schemas/Locator"
               }
            }
         },
         "FaceInfo":{
            "type":"object",
            "properties":{
               "Id":{
                  "type":"integer"
               },
               "Locator":{
                  "$ref":"#/components/schemas/Locator"
               },
               "Counters":{
                  "$ref":"#/components/schemas/Counters"
               },
               "IsDown":{
                  "type":"boolean"
               },
               "Latency":{
                  "$ref":"#/components/schemas/Snapshot"
               }
            }
         },
         "Counters":{
            "type":"object",
            "properties":{
               "FragBad":{
                  "minimum":0,
                  "type":"integer"
               },
               "FragGood":{
                  "minimum":0,
                  "type":"integer"
               },
               "L2DecodeErrs":{
                  "minimum":0,
                  "type":"integer"
               },
               "L3DecodeErrs":{
                  "minimum":0,
                  "type":"integer"
               },
               "Reass":{
                  "$ref":"#/components/schemas/InOrderReassemblerCounters"
               },
               "RxData":{
                  "minimum":0,
                  "type":"integer"
               },
               "RxFrames":{
                  "minimum":0,
                  "type":"integer"
               },
               "RxInterests":{
                  "minimum":0,
                  "type":"integer"
               },
               "RxNacks":{
                  "minimum":0,
                  "type":"integer"
               },
               "RxOctets":{
                  "minimum":0,
                  "type":"integer"
               },
               "TxAllocErrs":{
                  "minimum":0,
                  "type":"integer"
               },
               "TxData":{
                  "minimum":0,
                  "type":"integer"
               },
               "TxDropped":{
                  "minimum":0,
                  "type":"integer"
               },
               "TxFrames":{
                  "minimum":0,
                  "type":"integer"
               },
               "TxInterests":{
                  "minimum":0,
                  "type":"integer"
               },
               "TxNacks":{
                  "minimum":0,
                  "type":"integer"
               },
               "TxOctets":{
                  "minimum":0,
                  "type":"integer"
               },
               "TxQueued":{
                  "minimum":0,
                  "type":"integer"
               }
            }
         },
         "InOrderReassemblerCounters":{
            "type":"object",
            "properties":{
               "Accepted":{
                  "minimum":0,
                  "type":"integer"
               },
               "Delivered":{
                  "minimum":0,
                  "type":"integer"
               },
               "Incomplete":{
                  "minimum":0,
                  "type":"integer"
               },
               "OutOfOrder":{
                  "minimum":0,
                  "type":"integer"
               }
            }
         },
         "Snapshot":{
            "type":"object",
            "properties":{
               "Count":{
                  "minimum":0,
                  "type":"integer"
               },
               "Max":{
                  "type":"number"
               },
               "Mean":{
                  "type":"number"
               },
               "Min":{
                  "type":"number"
               },
               "Stdev":{
                  "minimum":0,
                  "type":"number"
               }
            }
         },
         "PortInfo":{
            "type":"object",
            "properties":{
               "Active":{
                  "type":"boolean"
               },
               "ImplName":{
                  "type":"string"
               },
               "Name":{
                  "type":"string"
               },
               "NumaSocket":{
                  "type":"number"
               }
            }
         },
         "Route":{
            "type":"object",
            "properties":{
               "Prefix":{
                  "type":"string"
               },
               "FaceId":{
                  "type":"integer"
               },
               "Origin":{
                  "type":"integer"
               },
               "Cost":{
                  "type":"integer"
               },
               "ChildInherit":{
                  "type":"boolean"
               },
               "Capture":{
                  "type":"boolean"
               }
            }
         },
         "RouteKey":{
            "type":"object",
            "properties":{
               "Prefix":{
                  "type":"string"
               },
               "FaceId":{
                  "type":"integer"
               },
               "Origin":{
                  "type":"integer"
               }
            }
         }
      }
   }
}

